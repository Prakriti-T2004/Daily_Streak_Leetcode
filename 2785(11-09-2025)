class Solution {
    public String sortVowels(String s) {
        int n = s.length();
         List<Integer> vowelIndices = new ArrayList<>();
        List<Character> vowels = new ArrayList<>();

        // Step 1: Collect vowels and their indices
        for (int i = 0; i < n; i++) {
            char c = s.charAt(i);
            if (isVowel(c)) {
                vowelIndices.add(i);
                vowels.add(c);
            }
        }

        // Step 2: Sort vowels by ASCII value
        Collections.sort(vowels);

        // Step 3: Reconstruct the string
        StringBuilder result = new StringBuilder(s);
        for (int i = 0; i < vowelIndices.size(); i++) {
            result.setCharAt(vowelIndices.get(i), vowels.get(i));
        }

        return result.toString();
    }

    private boolean isVowel(char c) {
        return "aeiouAEIOU".indexOf(c) != -1;

    }
}
